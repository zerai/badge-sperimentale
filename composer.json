{
    "name": "zerai/badge-sperimentale",
    "type": "project",
    "description": "badge sperimentale",
    "license": "MIT",
    "authors": [
        {
            "name": "Teclai Zerai",
            "email": "teclaizerai@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.4",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "bin-dir": "vendor/bin",
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "target-directory": "tools"
        }
    },
    "autoload": {
        "psr-4": {
            "Badge\\": "badge/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Badge\\Tests\\": "badge/tests/"
        }
    },
    "minimum-stability": "stable"
}
